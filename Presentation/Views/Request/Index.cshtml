@model IEnumerable<Presentation.Models.RequestModel>

@{
    ViewBag.Title = "Index";
}

<head><link href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
<script src="https://code.jquery.com/jquery-2.2.4.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script></head>

<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Request id</th>
            <th>Cost</th>
            <th>Duration</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Type ressource</th>
            <th>Delete </th>

        </tr>
    </thead>
    <tbody>
       @foreach (var p in ViewBag.result)

       {
        <tr>
            <td>@p.requestId</td>
            <td>@p.cost</td>
            <td>@p.duration</td>
            <td>@p.startDate</td>
            <td>@p.endDate</td>
            <td>@p.typeressource</td>
            <td><a href="@Url.Action("Delete","Request",new { id = p.requestId })" class="btn  btn-raised btn-danger waves-effect">Delete</a></td>
        </tr>
       }
    </tbody>
    <tfoot>
        <tr>
            <th>Request id</th>
            <th>Cost</th>
            <th>Duration</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Type ressource</th>
            <th>Delete </th>

        </tr>
    </tfoot>
</table>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>


@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Photo
        </th>
        <th>
            UserId
        </th>
        <th>
            Name
        </th>
        
        <th>
            Availability
        </th>
        <th>
            Rate
        </th>
        <th></th>
    </tr>

@foreach (var item in ViewBag.result) {
    <tr>
        <td>
            @{string path = "~/Content/Upload/Pictures/" + @item.photo;}
            <img src="@Url.Content(path)" width="50" height="50" />
        </td>
        <td>
            @item.userId
        </td>
        <td>
            @item.name
        </td>
        <td>
            @item.availability
        </td>
        <td>
            @item.rate
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.userId }) |
        </td>
    </tr>
}

</table>

@model IEnumerable<Presentation.Models.HolidayVM>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            Date
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.startDateEasy)
                -
                @Html.DisplayFor(modelItem => item.endDateEasy)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.holidayId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.holidayId })
            </td>
        </tr>
    }

</table>
